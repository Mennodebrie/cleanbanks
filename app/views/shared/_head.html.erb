<head>
  <meta charset='<%= ::Refinery::Application.config.encoding %>' />
  <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /><![endif]-->
  <title><%= browser_title(yield(:title)) %></title>
  <%= raw "<meta name=\"description\" content=\"#{@meta.meta_description}\" />" if @meta.meta_description.present? -%>
  <%= raw "<meta name=\"keywords\" content=\"#{@meta.meta_keywords}\">" if @meta.meta_keywords.present? -%>
  <%= csrf_meta_tag if RefinerySetting.find_or_set(:authenticity_token_on_frontend, true)-%>
  <%= yield :meta %>

  <%= stylesheet_link_tag "bootstrap", "bootstrap.responsive" %>
  
  <style type="text/css">

  html, body {
        background-color: #eee;
      }
    body {
      padding-top: 40px;
	  padding-bottom: 40px;
    }
	.page-header {
	        padding: 0px 0px 0px 0px;
	        margin:  0px 0px 0px 0px;
	      }
	#test{
		margin-top:75px;
	}	
  </style>


	<%= stylesheet_link_tag '/stylesheets/ie.css', :media => 'screen' %>	

	<%= stylesheet_link_tag '/stylesheets/application.css', :media => 'screen' %>
	
 	<%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Belgrano', :media => 'screen' %>


  <%= yield :stylesheets %>
  <%= render :partial => '/shared/google_analytics' unless local_request? %>

  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" %>
  <%= javascript_include_tag 'jquery-rails','modernizr-min','bootstrap-tabs','bootstrap-dropdown','application' %>
</head>
